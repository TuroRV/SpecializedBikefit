            <Label styleClass="app-title" text="Specialized Bikefit" fx:id="appTitle" onMouseClicked="#goToMenu"/>

            <Pane HBox.hgrow="ALWAYS" />

            <VBox alignment="CENTER_RIGHT" spacing="5">

                <Label fx:id="userInfoLabel" styleClass="user-label-header" text="usuario@email.com" />

                <HBox alignment="CENTER_RIGHT" spacing="10">

                    <Button fx:id="profileButton" mnemonicParsing="false"
                            onAction="#goToProfile"
                            styleClass="btn, btn-light"
                            text="Mi Perfil" />

                    <Button mnemonicParsing="false"
                            onAction="#closeSession"
                            styleClass="btn, btn-primary"
                            text="Cerrar SesiÃ³n" />
                </HBox>

            </VBox>
        </HBox>
    </top>

    <center>
        <BorderPane fx:id="contentPane" />
    </center>

