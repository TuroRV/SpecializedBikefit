<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="500.0" prefWidth="800.0" stylesheets="@../../../styles/styles.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.dam.specializedbikefit.Controllers.HomeController">

    <top>
        <HBox alignment="CENTER_LEFT" spacing="20" styleClass="header-container">
            <Label styleClass="app-title" text="Specialized Bikefit" />

            <Pane HBox.hgrow="ALWAYS" />
         <VBox alignment="CENTER" prefHeight="0.0" prefWidth="100.0">
            <children>
               <Button fx:id="profileButton" styleClass="btn, btn-secondary" mnemonicParsing="false" text="Mi Perfil" textAlignment="CENTER" onAction="#goToProfile">
                  <opaqueInsets>
                     <Insets />
                  </opaqueInsets>
                  <VBox.margin>
                     <Insets bottom="10.0" />
                  </VBox.margin>
               </Button>
      
                  <Label fx:id="userInfoLabel" styleClass="user-label" text="Usuario: usuario" />
            </children>
         </VBox>
        </HBox>
    </top>

    <center>
        <BorderPane fx:id="contentPane"></BorderPane>
    </center>

</BorderPane>
